<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="fr.polytech.di4.si.tp.model.Edition" table="EDITION" optimistic-lock="version">
        <meta attribute="class-description">
            This class contains the user inforrmations.
        </meta>
        <id name="id" type="int" column="edition_id">
            <generator class="native"/>
        </id>
        <property name="season" column="season" type="int"/>

    </class>
</hibernate-mapping>