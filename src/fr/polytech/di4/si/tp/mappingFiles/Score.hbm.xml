<?xml version="1.0" encoding="utf-8"?>
        <!DOCTYPE hibernate-mapping PUBLIC
                "-//Hibernate/Hibernate Mapping DTD//EN"
                "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
<class name="fr.polytech.di4.si.tp.model.Score" table="SCORE" optimistic-lock="version">
    <meta attribute="class-description">
        This class contains the user inforrmations.
    </meta>

    <id name="id" type="int" column="score_id"><generator class="native"/></id>

    <property name="score" column="score" type="int"/>
    <many-to-one name="matche" column="matche_id" unique="true"
                 class="fr.polytech.di4.si.tp.model.Matche" not-null="true"/>
    <many-to-one name="edition" column="edition_id" unique="true"
                 class="fr.polytech.di4.si.tp.model.Edition" not-null="true"/>
</class>


</hibernate-mapping>